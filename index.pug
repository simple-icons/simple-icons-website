doctype html
html
  head
    meta(charset='utf-8')
    title Simple Icons
    link(href='./styles/stylesheet.css' rel='stylesheet' type='text/css')

  body
    header(class="header" role="banner")
      div
        h1(class="header__title") Simple Icons
        p(class="header__description") #{iconCount} Free <abbr title="Scalable Vector Graphic">SVG</abbr> icons for popular brands
      ul(class="header__list")
        li(class="header__list-item")
          a(href="https://github.com/simple-icons/simple-icons") GitHub
        li(class="header__list-item")
          a(href="https://www.npmjs.com/package/simple-icons") NPM
        li(class="header__list-item")
          a(href="https://packagist.org/packages/simple-icons/simple-icons") Packagist
        li(class="header__list-item")
          a(href="https://github.com/simple-icons/simple-icons/blob/develop/README.md") About

