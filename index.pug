doctype html
html
  head
    meta(charset="utf-8")
    meta(content="initial-scale=1, shrink-to-fit=no, width=device-width" name="viewport")
    link(rel="preconnect" href="https://fonts.gstatic.com")
    link(rel="preconnect" href="https://cdn.carbonads.com")
    link(rel="preconnect" href="https://github.com")
    title Simple Icons
    meta(name="description" content=`${iconCount} Free SVG icons for popular brands.`)
    meta(property="og:type" content="website")
    meta(property="og:title" content="Simple Icons")
    meta(property="og:description" content=`${iconCount} Free SVG icons for popular brands.`)
    meta(property="og:url" content="https://simpleicons.org")
    meta(property="og:site_name" content="Simple Icons")
    meta(property="og:image" content="https://simpleicons.org/images/og.png")
    meta(name="twitter:card" content="summary_large_image")
    meta(name="twitter:title" content="Simple Icons")
    meta(name="twitter:description" content=`${iconCount} Free SVG icons for popular brands.`)
    meta(name="twitter:site" content="@bathtype")
    meta(name="twitter:domain" content="Simple Icons")
    meta(name="twitter:image:src" content="https://simpleicons.org/images/og.png")
    link(rel="icon" type="image/x-icon" href="https://simpleicons.org/images/favicon.ico")
    link(rel="icon" type="image/x-icon" href="https://simpleicons.org/images/favicon.ico")
    link(rel="icon" type="image/png" href="https://simpleicons.org/images/favicon.png")
    link(rel="apple-touch-icon" href="https://simpleicons.org/images/apple-touch-icon.png")
    link(rel="mask-icon" href="https://simpleicons.org/images/logo.svg" color="#111111")
    link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@600&family=Roboto+Mono:wght@400;600&display=swap")

  body(class="no-js")
    header(class="header" role="banner")
      div(class="header__row")
        h1(class="header__title") Simple Icons
        ul(class="header__list")
          li(class="header__list-item")
            a(href="https://github.com/simple-icons/simple-icons" rel="noopener") GitHub
          li(class="header__list-item")
            a(href="https://www.npmjs.com/package/simple-icons" rel="noopener") NPM
          li(class="header__list-item")
            a(href="https://packagist.org/packages/simple-icons/simple-icons" rel="noopener") Packagist
          li(class="header__list-item")
            a(href="https://github.com/simple-icons/simple-icons#readme" rel="noopener") About
      p(class="header__description") #{iconCount} Free <abbr title="Scalable Vector Graphic">SVG</abbr> icons for popular brands

    main(class="main" role="main")
      div(class="control")
        noscript Controls are only available when JavaScript is enabled.
        div(class="control-field search")
          label(class="control-field__title" for="search-input") Search
          div(class="search__wrapper")
            div(id="search-clear" class="hidden" aria-hidden) &times;
            input(
              id="search-input"
              class="control__input"
              type="text"
              placeholder="Search by brand..."
              disabled
            )
        div(class="control-field")
          label(class="control-field__title") Order
          div(class="control-field__row")
            button(id="order-alpha" class="control__button" title="Sort alphabetically" disabled)
